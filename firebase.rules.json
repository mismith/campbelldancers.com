{
  "rules": {
    "$environment": {
      "admin": {
        ".read": "auth != null && root.child($environment).child('data').child('users').child(auth.uid).child('admin').val() === true",
        ".write": false
      },
      "data": {
        "classes": {
          ".read": true,
          ".write": false
        },
        "locations": {
          ".read": true,
          ".write": false
        },
        "seasons": {
          ".read": true,
          ".write": false
        },
        "timeslots": {
          ".read": true,
          "$timeslotId": {
            "@dancers": {
              ".write": true
            },
            "$otherProperties": {
              ".write": false
            }
          }
        },
        "users": {
          ".read": "root.child($environment).child('data').child('users').child(auth.uid).child('admin').val() === true", // is ADMIN
          ".write": "root.child($environment).child('data').child('users').child(auth.uid).child('admin').val() === true", // is ADMIN
          "$userId": {
            ".read": "auth != null && auth.uid === $userId", // is SELF
            ".write": "auth != null && auth.uid === $userId" // is SELF
          }
        }
      }
    }
  }
}
